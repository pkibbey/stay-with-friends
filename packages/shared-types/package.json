{
  "name": "@stay-with-friends/shared-types",
  "version": "0.1.0",
  "private": true,
  "description": "Shared type definitions and schemas for Stay With Friends",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "generate": "tsx src/generate.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./entities": {
      "types": "./dist/entities.d.ts",
      "default": "./dist/entities.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts", 
      "default": "./dist/validators.js"
    }
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}