{
  "name": "@stay-with-friends/shared-types",
  "version": "0.1.0",
  "private": true,
  "description": "Shared type definitions and schemas for Stay With Friends",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
    "generate": "tsx src/generate.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./entities": {
      "types": "./dist/entities.d.ts",
      "default": "./dist/entities.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts", 
      "default": "./dist/validators.js"
    }
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"],
    "coverageDirectory": "coverage"
  }
}